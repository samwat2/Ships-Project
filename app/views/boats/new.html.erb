<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Boat Creation</h1>
  </div>
</div>
<div class="container">
	<div class="boat">
		<div class="form-group">
			<%= form_with model: @boat, data: {"parsely-validate": ''}, local: true do |f| %>
				<%= f.text_field :name, placeholder: 'Name', required: true, class: "form-control" %>
				<%= f.collection_select :destination, Job.all, {prompt: true}, placeholder: 'Location', required: true, class: "form-control" %>
				<%= f.number_field :containers, placeholder: 'Amount of Containers', required: true, class: "form-control" %>
				<div class="custom-file">
					<%= f.file_field :image, class: "custom-file-input" %>
					<%= f.label :image, 'Upload Image', class: 'custom-file-label' %>
				</div>
				<%= f.submit class: "btn btn-primary" %>
			<% end %>	
		</div>
	</div>
</div>