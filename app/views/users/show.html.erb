<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><u><%= @user.first_name %> <%= @user.last_name %></u></h1>
    <p class="lead">Email: <%= @user.email %></p>
  </div>
</div>

<%= form_with model: Boat.new, id:'boat-new-form', data: {"parsely-validate": ''} do |f| %>
	<%= f.text_field :name, placeholder: 'name', required: true %>
	<%= f.text_field :location, placeholder: 'location', required: true %>
	<%= f.number_field :containers, placeholder: 'Amount of Containers', required: true %>
	<%= f.file_field :image %>
	<%= f.submit %>
<% end %>
<ul class="list-group list-group-flush">
	<% current_user.jobs.each do |job| %>
			<h5><u>Job Description:</u></h5>
			<li class="list-group-item"><%= job.description %></li>
	<% end %>
	<div class="boats">
		<%= render current_user.boats %>
	</div>
</ul>

